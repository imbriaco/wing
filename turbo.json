{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "pipeline": {
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": ["src/**"]
    },
    "dev": {
      "dependsOn": ["^compile"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["compile"],
      "inputs": ["src/**", "test/**"]
    },
    "post-compile": {
      "dependsOn": ["^compile"],
      "cache": false
    },
    "lint": {},
    "eslint": {},
    "package": {
      "dependsOn": ["compile"],
      "cache": false
    }
  }
}
