{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "compile:generate": {
      "inputs": ["grammar.js"],
      "outputs": ["src/**", "bindings/**", "binding.gyp"]
    },
    "compile:wasm": {
      "dependsOn": ["compile:generate"],
      "inputs": ["src/**", "bindings/**", "binding.gyp"],
      "outputs": ["tree-sitter-dsl.d.ts", "tree-sitter-wing.wasm"]
    },
    "compile": {
      "dependsOn": ["compile:wasm"]
    },
    "playground": {
      "dependsOn": ["compile:wasm"]
    },
    "playground:quiet": {
      "dependsOn": ["compile:wasm"]
    }
  }
}
